@model ListPageCountService

@{
    var w_count = Model.w_count;
    var r_count = Model.r_count;
    var e_count = Model.e_count; 
}


<nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3">
    <div class="container">
        <img class="navbar-img mx-3" src="~/images/logo.jpg" alt="no_logo">
        <div class="navbar-brand">MTM Warehouse</div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navmenu">
            <ul class="navbar-nav ms-auto ">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="HomePage" class="nav-link mx-4"><strong>Home</strong></a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Action" asp-action="ListActions" class="nav-link mx-4"><strong>Actions</strong></a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Report" asp-action="ReportPage" class="nav-link mx-4"><strong>Reports</strong></a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" asp-controller="Login" asp-action="LogOut" method="post">
                        <input type="submit" class="btn btn-outline-danger btn-sm btn-floating mx-4 p-2" value="Logout" />
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>
      
    <div class="container my-1">
        <div class="row g-auto mx-auto my-5 justify-content-evenly">

            <div class="col-2">
                <div class="card" style="width: 16rem;">
                    <img src="~/images/W-micro.png" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title text-center text-info"><strong>Warehouse</strong></h5>
                    <p class="card-text text-center">Warehouse Count : <span class="card-text text-center fs-6 badge bg-success rounded-pill">@w_count</span></p>

                    <div class="col-12">
                            <div class="d-grid gap-2">
                                <a asp-controller="Action" asp-action="AddWarehousePage" class="btn btn-outline-dark btn-sm btn-floating p-1" type="button" role="button"><strong class="fs-5">Add Warehouse</strong></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-2">
                <div class="card" style="width: 16rem;">
                    <img src="~/images/transport.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                    <h5 class="card-title text-center text-info"><strong>Move</strong></h5>
                        <p class="card-text text-center">Transfer items between warehouses</p>
                        <div class="col-12">
                            <div class="d-grid gap-2">
                            <a asp-controller="Action" asp-action="TransferItems" class="btn btn-outline-dark btn-sm btn-floating" type="button" role="button"><strong class="fs-5">Move Items</strong></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

    <div class="container">

        @if (TempData.ContainsKey("LastActionMessage"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["LastActionMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

    </div>
    


